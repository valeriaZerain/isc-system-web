pipeline {
    agent {
        docker {
            image 'node:20'
        }
    }
    tools {
        nodejs 'nodejs20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/valeriaZerain/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install -g yarn'
                sh 'yarn install'
            }
        }
        stage('System Setup') {
            steps 
                sh 'apt-get update'
                sh 'apt-get install -y xvfb'
            }
        }
        stage('Run Cypress Tests (xvfb)') {
            steps {
                sh 'xvfb-run npx cypress run'
            }
        }
    }
}
