pipeline {
    agent any
    tools {
        nodejs 'nodejs20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch:'qa', url: 'https://github.com/valeriaZerain/isc-system-web.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install -g yarn'
                sh 'yarn install'
            }
        }
        stage('Install cypress'){
            steps {
                sh 'yarn add cypress --dev'
            }
        }
        stage('Cypress tests') {
            steps {
                sh 'npx cypress run --headless'
            }
        }
    }
}
