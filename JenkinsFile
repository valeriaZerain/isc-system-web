pipeline {
    agent any
    tools {
        nodejs 'nodejs20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/valeriaZerain/isc-system-web.git'
            }
        }
        stage('Install npm Dependencies') {
            steps {
                sh 'npm install -g yarn'
                sh 'yarn install'
            }
        }
        stage('System Setup') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get install -y xvfb'
                sh 'npm install'
            }
        }
        stage('Run Cypress Tests (xvfb)') {
            steps {
                sh 'xvfb-run npx cypress run'
            }
        }
    }
}
