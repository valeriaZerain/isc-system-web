pipeline {
    agent {
        docker {
            image 'cypress/included:13.14.2'
        }
    }
    tools {
        nodejs 'nodejs20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch:'qa', url: 'https://github.com/valeriaZerain/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Cypress tests') {
            steps {
                sh 'npx cypress run --headless'
            }
        }
    }
}
