pipeline {
    agent any
    tools {
        nodejs 'nodejs20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch:'qa', url: 'https://github.com/valeriaZerain/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'sudo apt-get update && sudo apt-get install -y xvfb'
                sh 'npm install'
            }
        }
        stage('Cypress tests') {
            steps {
                sh 'xvfb-run -a npx cypress run --headless'
            }
        }
    }
}
